<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :owner_email, "Owner's email" %>
  <%= f.text_field :owner_email %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.submit 'Create Restaurant' %>
<% end %>